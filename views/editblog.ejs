<%- include('partials/header') %>
<div id='blogs'>
<form  method="POST"  action="/blog/<%=foundBlog._id%>/edit?_method=PUT" >

<div>
    <label for='Ttl'>Blog Title</label>
<input name='title'  id='Ttl'  placeholder="Enter Blog Title Here" value="<%=foundBlog.title%>" type='text'>
</div>
<div>
<label for='img'>Image</label>
<input name='image' id='img'  placeholder="Image Link Here" value="<%=foundBlog.image%>" type='text'>
</div>
<div>
<label for='Content'>Text</label>
<textarea id='Content' name='content'  placeholder="<%=foundBlog.content%>"></textarea>
</div>
<div>
<button type="submit">Create</button>
</div>

</form>
</div>
<%- include('partials/footer') %>