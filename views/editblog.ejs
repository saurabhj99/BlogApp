<%- include('partials/header') %>
<div class='blogs-form'>
    
    <form method="POST"  action="/blog/<%=foundBlog._id%>/edit?_method=PUT" enctype=multipart/form-data >
        
        <div>
            <label for='Ttl'>Blog Title</label>
            <input name='title'  id='Ttl'  placeholder="Enter Blog Title Here" value="<%=foundBlog.title%>" type='text'>
        </div>
        
        <div>
            <label for='img'>Image</label>
            <button title="Upload Image here" onclick="uploadfile()" class="Upload_btn"><i class="material-icons" style="font-size:60px;">add_a_photo</i></button>
            <input id="img" name="image" type="file" accept="image/*" hidden required>
        </div>

        <div>
            <label for='Content'>Text</label>
            <textarea id='Content' name='content'><%=foundBlog.content%></textarea>
        </div>

        <div>
            <button class="submit_button" type="submit">Create</button>
        </div>

    </form>
</div>
<%- include('partials/footer') %>